<div class="header-grid">
  <h1>To-Do List</h1>
</div>
<p><%= link_to 'New Task', new_task_path %></p>
<% @tasks.each do |task| %>
  <h2><%= task.task %></h2>
  <%= link_to 'Show Task', task_path(task) %>
  <%= link_to 'Edit Task', edit_task_path(task) %>
  <%= link_to 'Destroy Task', task, method: :delete %>
<% end %>